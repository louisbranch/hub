<% CharClass.all.each do |char| %>
  <section id="<%= char.slug %>" style="display:none">
    <ul id="active_block">
      <% char.skills.each do |skill|%>
        <% if !skill.passive? %>
          <li class='<%= skill.skill_type.slug %>' data-url='<%= char_class_skill_path(char,skill) %>'>
            <%= image_tag(skill.img_url, :class => "skill_img") %>
            <div>
              <h4 class="skill_name"><%= skill.name %></h4>
              <span class="skill_level">lvl <%= skill.level %> - <%= skill.skill_type.name %></span>
            </div>
            <div style="display:none">
              <ul class="skill_details">
                <% if skill.cost? %>
                  <li><strong>Cost:</strong> <%= skill.cost %></li>
                <% end %>
                <% if skill.generate? %>
                  <li><strong>Generate:</strong> <%= skill.generate %></li>
                <% end %>
                <% if skill.cooldown? %>
                  <li><strong>Cooldown:</strong> <%= skill.cooldown %></li>
                <% end %>
              </ul>
            </div>
          </li>
        <% end %>
      <% end %>
    </ul>
    <ul id="passive_block" style="display:none">
      <% char.skills.each do |skill|%>
        <% if skill.passive? %>
          <li class='<%= skill.skill_type.slug %>'  data-url='<%= char_class_skill_path(char,skill) %>'>
            <%= image_tag(skill.img_url, :class => "skill_img") %>
            <div>
              <h4 class="skill_name"><%= skill.name %></h4>
              <span class="skill_level">lvl <%= skill.level %></span>
            </div>
          </li>
        <% end %>
      <% end %>
    </ul>
  </section>
<% end %>

