<h1>Skills</h1>
<table>
  <% @skills.each do |skill| %>
  <tr>
    <td><%= link_to skill.name, skill_url(skill) %></td>
    <td><%= skill.description.truncate(100) unless skill.description.nil? %></td>
    <td><%= skill.skill_type.main %></td>
    <td><%= skill.skill_type.sub %></td>
    <td><%= link_to "Edit", edit_skill_url(skill) %></td>
    <!--<td><%= link_to "Delete", skill_url(skill), :method => :delete %></td>-->
  </tr>
  <% end %>
</table>

