<%= form_for @skill do |form| %>
  <%= label_tag(:name, "Name:") %>
  <%= form.text_field :name %>
  <%= label_tag(:level, "Level:") %>
  <%= form.text_field :level %>
  <%= label_tag(:skill_type_id, "Type:") %>
  <%= form.select(:skill_type_id, options_for_select(array_skill_type_by_char))%>
  <%= label_tag(:description, "Description:") %>
  <%= form.text_area :description %>
  <%= label_tag(:img_url, "Image URL:") %>
  <%= form.text_field :img_url %>
  <%= label_tag(:cost, "Cost:") %>
  <%= form.text_field :cost %>
  <%= label_tag(:generate, "Generate:") %>
  <%= form.text_field :generate %>
  <%= label_tag(:cooldown, "Cooldown:") %>
  <%= form.text_field :cooldown %>
  <%= form.submit @form_action %>
<% end %>

