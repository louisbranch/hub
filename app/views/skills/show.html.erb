<% flash.each do |name, msg| %>
  <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
<% end %>
<h1> <%= @skill.name %></h1>
<h2> <%= @skill.description %></h2>
<h2>Rune Effects:</h2>
<table>
  <% @rune_effects.each do |rune_effect| %>
  <tr>
    <td><%= link_to rune_effect.name, rune_effect_url(rune_effect) %></td>
    <td><%= rune_effect.description %></td>
    <td><%= rune_effect.rune.name %></td>
  </tr>
  <% end %>
</table>
<hr>
<%= link_to "All Skills", char_class_skills_path %>

