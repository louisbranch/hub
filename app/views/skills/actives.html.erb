<% @skill_types.each do |skill_type|%>
  <% if skill_type.name != "Passive"  %>
    <div class="<%= skill_type.slug%>">
      <h4><%= skill_type.name unless skill_type.name == "Passive" %></h4>
      <ul>
        <% skill_type.skills.each do |skill| %>
          <li id="<%= skill.slug %>" data-tooltip-url="<%= tooltip_char_class_skill_path(@char,skill) %>" data-drilldown-url="<%= drilldown_char_class_skill_path(@char,skill) %>" data-title="<%= skill.name %>" data-img="<%= skill.img_url %>" data-details="lvl <%= skill.level %> - <%= skill.skill_type.name %>" >
            <%= image_tag(skill.img_url)%>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
<% end %>

