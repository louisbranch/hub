<%= form_for ([current_user,@build,like_finder]), :remote => true  do |f| %>
  <% if current_user.has_voted?(@build) && current_user.has_voted?(@build).vote == 1 -%>
    <%= label_tag(:vote, "", :for => "vote_like", :id => "label_like", :class => "vote_active") %>
  <% else -%>
    <%= label_tag(:vote, "", :for => "vote_like", :id => "label_like") %>
  <% end -%>
  <%= f.radio_button :vote, "1", :id => "vote_like" %>
  <% if current_user.has_voted?(@build) && current_user.has_voted?(@build).vote == 0 -%>
    <%= label_tag(:vote, "", :for => "vote_dislike", :id => "label_dislike", :class => "vote_active") %>
  <% else -%>
    <%= label_tag(:vote, "", :for => "vote_dislike", :id => "label_dislike") %>
  <% end -%>
  <%= f.radio_button :vote, "0", :id => "vote_dislike" %>
<% end %>

