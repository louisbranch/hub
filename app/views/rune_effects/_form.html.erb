<%= form_for @rune_effect do |form| %>
  <%= label_tag(:name, "Name:") %>
  <%= form.text_field :name %>
  <%= label_tag(:skill_id, "Skill:") %>
  <%= form.select(:skill_id, options_for_select(array_skills))%>
  <%= label_tag(:rune_id, "Rune:") %>
  <%= form.select(:rune_id, options_for_select(array_runes))%>
  <%= label_tag(:description, "Description:") %>
  <%= form.text_area :description %>
  <%= form.submit @form_action %>
<% end %>

